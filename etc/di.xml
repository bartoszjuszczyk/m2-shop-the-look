    <type name="Juszczyk\ShopTheLook\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Juszczyk\ShopTheLook\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">juszczykShopTheLookLogHandler</argument>
